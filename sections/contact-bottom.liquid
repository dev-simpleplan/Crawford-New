<section class="newsletter-section contact-bottom">
  <div class="newsletter-section-cont">
    <div class="newsletter-head">
      <h1 class="head-white">{{ section.settings.heading }}</h1>
    </div>
    <div class="newsletter-body">
      <p>{{ section.settings.body }}</p>
    </div>
    <div class="newsletter-button">
      <a href="{{ section.settings.ctaLink }}" class="craw-cta cta-white" target="_blank">{{ section.settings.ctaText }}</a>
    </div>
  </div>
</section>

<style>
  .contact-bottom {
    background-image: url('{{ section.settings.image | img_url: 'master' }}');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }
</style>

{% schema %}
  {
    "name": "Bottom",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Book Appointment Heading"
      },
      {
        "type": "text",
        "id": "body",
        "label": "Book Appointment Body"
      },
      {
        "type": "text",
        "id": "ctaText",
        "label": "CTA text"
      },
      {
        "type": "text",
        "id": "ctaLink",
        "label": "CTA Link"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Book Appointment Background Image"
      }
    ]
  }
{% endschema %}