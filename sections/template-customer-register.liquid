<section
  class="login-signup-page"
  data-scroll-section
  style="background-image: url({{ section.settings.Img |  img_url: 'master' }}); background-size: cover; background-repeat: no-repeat; background-position: center;">
  <div class="container" style="min-height: 100vh">
    <div class="customer-con signup-page">
      <div class="customer-wrapper login-signup">
        <div class="cw-left">
          <div class="head">
            <h2>{{ section.settings.head }}</h2>
          </div>
        </div>
        <div class="cw-right">
          <div class="form">
            {% form 'create_customer' %}
              {% if form.errors %}
                {{ form.errors | default_errors }}
              {% endif %}
              <div class="form-con">
                <label for="full-name">Full name*
                </label>
                <input
                  type="text"
                  name="customer[first_name]"
                  placeholder="John Doe"
                  id="full-name"
                  required />
              </div>
              <div class="form-con">
                <label for="email">Email Address*</label>
                <input
                  type="email"
                  name="customer[email]"
                  placeholder="johndoe@email.com"
                  id="email"
                  required
                  pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$" />
              </div>
              <div class="form-con">
                <label for="password">password</label>
                <input
                  type="password"
                  name="customer[password]"
                  id="password"
                  placeholder="8+ characters"
                  pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                  title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" />
              </div>
              <div class="form-con checkbox">
                <div class="fcc-con">
                  <input
                    type="checkbox"
                    id="checkbox"
                    required>
                  <p class="small">Creating an account means youâ€™re okay with our
                    <a href="{{ section.settings.tnc.url }}">Terms of Service</a>, and our
                    <a href="{{ section.settings.pp.url }}">Privacy Policy.</a>
                  </p>
                </div>
              </div>
              <div class="form-con submit-but">
                <button class="custom-button" type="submit">
                  Sign in
                </button>
              </div>
            {% endform %}
          </div>
          <div class="signup-cta">
            <p>{{ section.settings.txt }} {{ 'Log In' | customer_login_link }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "SignUp Page",
    "settings": [
      {
        "type": "text",
        "id": "head",
        "label": "Section heading"
      },
      {
        "type": "image_picker",
        "id": "Img",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "txt",
        "label": "Login Text"
      },
      {
        "type": "page",
        "id": "tnc",
        "label": "Terms & Condition"
      }, {
        "type": "page",
        "id": "pp",
        "label": "Terms & Condition"
      }
    ]
  }
{% endschema %}