<section
  id="first"
  class="featured-collection"
  data-scroll-section>
  <div class="custom-container">
    <div class="featured-collection-head">
      <h2 class="head-black">{{ section.settings.heading }}</h2>
    </div>
    <div class="featured-collection-cards">
      <div class="featured-collection-cards-wrap">
        {% for block in section.blocks %}
          <a href="{{ block.settings.collectionUrl }}" class="featured-collection-card">
            <div class="featured-collection-card-img">
              <img src="{{ block.settings.collectionImg |  img_url: 'master' }}" alt="">
            </div>
            <div class="featured-collection-card-content">
              <div class="featured-collection-card-sub">
                <span>{{ block.settings.subCollection }}</span>
              </div>
              <div class="featured-collection-card-head">
                <h3 class="head-black">{{ block.settings.headingCollection }}</h3>
              </div>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Featured Colelctions",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading"
      }
    ],
    "blocks": [
      {
        "type": "Card",
        "name": "Featured Collection",
        "settings": [
          {
            "type": "image_picker",
            "id": "collectionImg",
            "label": "Collection 1 Image"
          }, {
            "type": "url",
            "id": "collectionUrl",
            "label": "Collection 1 URL"
          }, {
            "type": "text",
            "id": "subCollection",
            "label": "Collection 1 Sub-Heading"
          }, {
            "type": "text",
            "id": "headingCollection",
            "label": "Collection 1 Heading"
          }
        ]
      }
    ]
  }
{% endschema %}