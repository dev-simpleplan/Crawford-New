<style>
    .blog-page{
      margin-top: 80px;
    }
    .blog-page .container-fluid{
      padding: 0 3%;
    }
    .blog-tabs {
      display: flex;
      flex-wrap: wrap;
      gap: 50px;
    }
    .blog-page-header .section-header__title{
      /* font-family: Area Inktrap; */
      font-weight: 400;
      font-size: 40px;
      line-height: 120%;
      letter-spacing: 0.02em;
    }
    .blog-page-header p{
      /* font-family: Switzer; */
      font-weight: 400;
      font-size: 16px;
      line-height: 150%;
      letter-spacing: 0.02em;
      color: #000;
      max-width: 52ch;
      margin-top: 15px;
    }
    .blog-tab {
      border-radius: 20px;
      cursor: pointer;
      transition: all 0.3s ease;
      /* font-family: Switzer; */
      font-weight: 400;
      font-size: 14px;
      /* leading-trim: Cap height; */
      line-height: 150%;
      letter-spacing: .22em;
      vertical-align: middle;
      text-transform: uppercase;
      color: #8A8A8A;
    }

    .blog-tab.active {
      color: #000;
    }

    .blog-sort {
      display: {% if section.settings.show_sort %}flex{% else %}none{% endif %};
    }

    .blog-sort select {
      padding: 0 10px;
      border: none;
      /* font-family: Switzer; */
      font-weight: 400;
      font-size: 14px;
      /* leading-trim: Cap height; */
      line-height: 150%;
      letter-spacing: 0.22em;
      vertical-align: middle;
      text-transform: uppercase;
      outline: none;
      color: #8A8A8A;
    }

    .blog-articles {
      display: grid;
      grid-template-columns: repeat(3, minmax({{ section.settings.article_min_width | default: '300' }}px, 1fr));
      gap: {{ section.settings.article_gap | default: '20' }}px;
      row-gap: 70px;
      margin-top: 55px;
    }

    .blog-article {
      overflow: hidden;
    }
    .blog-article-content {
      padding: 20px 0;
    }

    .blog-article h3 {
      margin-top: 0;
      color: {{ section.settings.article_title_color | default: '#000000' }};
      /* font-family: Switzer; */
      font-weight: 400;
      font-size: 16px;
      line-height: 150%;
      letter-spacing: 0.02em;

    }
    .blog-article p {
      display: -webkit-box;
      -webkit-line-clamp: 2; /* Number of lines to show */
      -webkit-box-orient: vertical;
      overflow: hidden;
      text-overflow: ellipsis;
      /* font-family: Switzer; */
      font-weight: 300;
      font-size: 14px;
      /* leading-trim: Cap height; */
      line-height: 150%;
      letter-spacing: 0.02em;
      color: #656565;
      margin-top: 5px;
    }
    .blog-article-image{
      padding: 24px 21px;
      aspect-ratio: 5/6;
      width: 100%;
      background-color: #FAFAFA;
    }
    .blog-article-image img {
      width: 100%;
      height: 100%;
      object-fit: cover !important;
      transition: all 0.6s ease;
    }
    .blog-filters {
      display: flex;
      width: 100%;
      justify-content: space-between;
      align-items: center;
      margin-top: 55px;
  }
  .bai-wrap{
    overflow: hidden;
    width: 100%;
    height: 100%;
  }
  .blog-article:hover .bai-wrap img{
    transform: scale(1.05);
  }
  @media screen and (max-width: 991px) {
        .blog-articles {
            grid-template-columns: repeat(2, minmax(200px, 1fr));
            row-gap: 50px; 
        }  
    }
    @media screen and (max-width: 768px) {
        .blog-filters {
            flex-direction: column;
            justify-content: start;
            align-items: start;
            gap: 20px;
        }
        .blog-sort select{
            padding: 0;
    min-width: 60px;

        }
        .blog-tabs{
            gap: 30px;
        }
    }
    @media screen and (max-width: 500px) {
        .blog-articles {
        grid-template-columns: repeat(1, minmax(200px, 1fr)) !important;
        row-gap: 30px !important;
    }
    }
</style>
<div class="blog-page" data-scroll-section>
  <div class="container-fluid">
    <div class="blog-page-wrap">
      <div class="blog-page-header">
        <h2 class="section-header__title">{{ section.settings.title | default: blog.title }}</h2>
        {% comment %} <p>{{ section.settings.description }}</p> {% endcomment %}
      </div>

      <div class="blog-filters">
        <div class="blog-tabs">
          <div class="blog-tab active" data-tag="all">All</div>
          {% for tag in blog.all_tags %}
            <div class="blog-tab" data-tag="{{ tag | handleize }}">{{ tag }}</div>
          {% endfor %}
        </div>

        <div class="blog-sort">
          <select id="blog-sort">
            <option value="published_desc">Newest First</option>
            <option value="published_asc">Oldest First</option>
            <option value="title_asc">A-Z</option>
            <option value="title_desc">Z-A</option>
          </select>
        </div>
      </div>


      <div class="blog-articles" id="blog-articles-container">
        {% if blog.articles.size == 0 %}
          <p>No articles found.</p>
        {% endif %}

        {% assign articles = blog.articles | sort: 'published_at' %}
        {% assign articles = articles | reverse %}
        {% paginate blog.articles by section.settings.articles_per_page %}
          {% for article in blog.articles %}
            <a href="{{ article.url }}">
              <div
                class="blog-article"
                data-tags="{% for tag in article.tags %}{{ tag | handleize }} {% endfor %}"
                data-published-date="{{ article.published_at | date: '%Y%m%d' }}"
                data-title="{{ article.title | handleize }}"
              >
                {% if article.image %}
                  <div
                    class="blog-article-image"
                  >
                    <div class="bai-wrap">
                      <img src="{{ article.image | img_url: 'master' }}" alt="blog">
                    </div>
                  </div>
                {% endif %}
                <div class="blog-article-content">
                  <h3>{{ article.title }}</h3>
                  <p>{{ article.excerpt_or_content | strip_html }}</p>
                </div>
              </div>
            </a>
          {% endfor %}

          {% if paginate.pages > 1 %}
            <div class="pagination">
              {{ paginate | default_pagination }}
            </div>
          {% endif %}
        {% endpaginate %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabs = document.querySelectorAll('.blog-tab');
    const sortSelect = document.getElementById('blog-sort');
    const articlesContainer = document.getElementById('blog-articles-container');
    let articles = Array.from(document.querySelectorAll('.blog-article'));

    // Store original article data for recreation
    const originalArticles = articles.map(article => {
        return {
            html: article.innerHTML,
            dataset: {
                tags: article.dataset.tags,
                publishedDate: article.dataset.publishedDate, // Already in YYYYMMDD format
                title: article.dataset.title
            },
            url: article.closest('a')?.href || ''
        };
    });

    // Initialize event listeners
    function initializeEventListeners() {
        // Tab filtering
        tabs.forEach(tab => {
            tab.addEventListener('click', function() {
                tabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');
                filterAndSortArticles(this.dataset.tag);
            });
        });

        // Sort functionality
        sortSelect.addEventListener('change', function() {
            const activeTab = document.querySelector('.blog-tab.active');
            filterAndSortArticles(activeTab.dataset.tag);
        });
    }

    // Main filtering and sorting function
    function filterAndSortArticles(tag = 'all') {
        const sortValue = sortSelect.value;
        let filteredArticles = [...originalArticles];

        // Filter by tag
        if (tag !== 'all') {
            filteredArticles = filteredArticles.filter(article => {
                return article.dataset.tags.includes(tag);
            });
        }

        // Sort articles
        filteredArticles.sort((a, b) => {
            const dateA = parseInt(a.dataset.publishedDate);
            const dateB = parseInt(b.dataset.publishedDate);
            
            switch (sortValue) {
                case 'published_desc':
                    return dateB - dateA; // Newest first (higher numbers first)
                case 'published_asc':
                    return dateA - dateB; // Oldest first (lower numbers first)
                case 'title_asc':
                    return a.dataset.title.localeCompare(b.dataset.title);
                case 'title_desc':
                    return b.dataset.title.localeCompare(a.dataset.title);
                default:
                    return 0;
            }
        });

        renderArticles(filteredArticles);
    }

    // Render articles to DOM
    function renderArticles(articlesToRender) {
        articlesContainer.innerHTML = '';
        const fragment = document.createDocumentFragment();
        
        articlesToRender.forEach(articleData => {
            const articleLink = document.createElement('a');
            articleLink.href = articleData.url;
            
            const articleDiv = document.createElement('div');
            articleDiv.className = 'blog-article';
            articleDiv.dataset.tags = articleData.dataset.tags;
            articleDiv.dataset.publishedDate = articleData.dataset.publishedDate;
            articleDiv.dataset.title = articleData.dataset.title;
            
            articleDiv.innerHTML = articleData.html;
            articleLink.appendChild(articleDiv);
            fragment.appendChild(articleLink);
        });
        
        articlesContainer.appendChild(fragment);
        articles = Array.from(document.querySelectorAll('.blog-article'));
    }

    // Initialize the page
    initializeEventListeners();
});
</script>

