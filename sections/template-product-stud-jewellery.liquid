                            <label>
                              <p class="small">
                                <strong>
                                  <span>{{ option.selected_value }}</span>
                                  <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="6"
                                    height="11"
                                    viewBox="0 0 6 11"
                                    fill="none"
                                  >
                                    <path
                                      d="M1.09937 9.34961L4.94824 5.50073L1.09937 1.65186"
                                      stroke="#161716"
                                      stroke-linecap="square"
                                      stroke-linejoin="round" />
                                  </svg>
